    <body class="{% block bodyClass %}{% endblock %}">
        {% block bodyContent %}{% endblock %}
        <footer class="text-center text-muted small py-4">
            2018 - 2020 | Codé avec 
            <i class="fas fa-heart text-primary"></i>
            <a href="https://symfony.com/" target="_blank"><i class="fab fa-symfony"></i></a>
            <a href="https://getbootstrap.com" target="_blank"><i class="fab fa-bootstrap"></i></a>
        </footer>
        <a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Retour en haut de la page" data-toggle="tooltip" data-placement="left"><i class="fas fa-chevron-up"></i></a>
        <script src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>
        <script src="{{ asset('js/popper-1.16.0.min.js') }}"></script>
